#Ceasar Cypher Encoder
word = input("normal word: ")
list = []
newlist = []
for i in range(len(word)):
  list.append(word[i])
for i in range(len(list)-1):
  newlist.append(list[i+1])
newlist.append(list[0])
print(newlist)

#Caesar Cypher Decoder
word2 = input('cypher word: ')
clist = []
cnewlist = []
for i in range(len(word2)):
  clist.append(word2[i])
for i in range(len(clist)-1):
  cnewlist.append(clist[i-1])
cnewlist.append(clist[len(word2)-2])
print(cnewlist)
